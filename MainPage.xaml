        <!--Show time-->
        <TextBox x:Name="tb_ShowTime" HorizontalAlignment="Left" Margin="1236,0,0,0" TextWrapping="Wrap" Text="Time Now" VerticalAlignment="Top" Height="50" Width="130" Background="Aqua"/>

        <Button x:Name="btZoomAll" Content="Zoom All" HorizontalAlignment="Left" Height="45" Margin="1236,60,0,0" 
                VerticalAlignment="Top" Width="130" Click="ZoomAll_Click" Foreground="Green" Background="Orange"/>

        <Button x:Name="btOneSceen" Content="One Sceen" HorizontalAlignment="Left" Margin="1236,115,0,0" VerticalAlignment="Top" Height="45" 
                Width="130" Click="OneSceen_Click" Foreground="Red" Background="White"/>

        <Button x:Name="FindFight" Click="FindFight_Click" Content="Flight's Location" HorizontalAlignment="Left" 
                Height="45" Margin="1236,170,0,0" VerticalAlignment="Top" Width="130" Foreground="Red" Background="BlueViolet"/>

        <!--Show map 3d-->
        <Button x:Name="BtMap3D" Content="ShowMap3D" Click="Map3D_Click" HorizontalAlignment="Left" Height="45" 
                Margin="1236,225,0,0" VerticalAlignment="Top" Width="130" Background="Blue"/>

        <!--UART-->
        <ListBox x:Name="ConnectDevices" HorizontalAlignment="Left" Height="80" Margin="1236,280,0,0" VerticalAlignment="Top" Width="130" RenderTransformOrigin="0.5,0.5"
                  ScrollViewer.HorizontalScrollMode="Enabled" ScrollViewer.HorizontalScrollBarVisibility="Visible" ItemsSource="{Binding Source={StaticResource DeviceListSource}}" Background="Pink">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Id}" />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <Button x:Name="comPortInput" Content="Connect" Click="comPortInput_Click" HorizontalAlignment="Left" Height="45" Margin="1236,370,0,0" VerticalAlignment="Top" Width="130" Background="Blue"/>

        <Button x:Name="closeDevice" Content="Disconnect" Click="closeDevice_Click" HorizontalAlignment="Left" Height="45" Margin="1236,425,0,0" VerticalAlignment="Top" Width="130" Background="Red" RenderTransformOrigin="0.478,-0.478"/>

        <TextBox x:Name="tb_ZoomLevel" HorizontalAlignment="Left" Margin="1236,480,0,0" TextWrapping="Wrap" Text="ZoolLevel" VerticalAlignment="Top" Height="60" Width="130" Background="Aqua"/>

        <TextBox x:Name="tbShowDis" Background="Gold" HorizontalAlignment="Left" Margin="1236,550,-12,-18" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="60" Width="130" 
                 Foreground="{ThemeResource AppBarToggleButtonCheckedPressedBorderThemeBrush}" />

