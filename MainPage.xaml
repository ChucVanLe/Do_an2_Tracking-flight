        <!--Input Position-->
        <TextBox x:Name="tb_Position" HorizontalAlignment="Left" Margin="170,0,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="30" Width="280" Background="Aqua"/>
        <!--Search button-->
        <Button x:Name="btSearch" Content="Search" HorizontalAlignment="Left" Height="30" Margin="480,0,0,0" 
                VerticalAlignment="Top" Width="70" Click="Search_Click" Foreground="Yellow" Background="Green"/>
        <!--Input MapTapped-->
        <TextBlock x:Name="tblock_MapTapped" HorizontalAlignment="Left" FontSize="20" Foreground="YellowGreen" Margin="565,0,0,0" TextWrapping="Wrap" Text="MapTapped At: " VerticalAlignment="Top" Height="30" Width="140"/>
        <!--Input Latitude-->
        <TextBlock x:Name="tblock_Latitude" HorizontalAlignment="Left" FontSize="20" Foreground="Red" Margin="705,0,0,0" TextWrapping="Wrap" Text="Lat: " VerticalAlignment="Top" Height="30" Width="40"/>

