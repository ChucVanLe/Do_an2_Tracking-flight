        -->
        <!--Hiện khoảng cách-->
        <!--Ta hiện khoảng cách trên đường thẳng-->
        <!--Show time-->
        <TextBox x:Name="tb_ShowTime" HorizontalAlignment="Left" Margin="1198,114,0,0" TextWrapping="Wrap" Text="Now" VerticalAlignment="Top" Height="50" Width="80" Background="Wheat" Foreground="Red"/>

        <Button x:Name="btZoomAll" Content="Zoom All" HorizontalAlignment="Left" Height="38" Margin="1200,174,0,0" 
                VerticalAlignment="Top" Width="80" Click="ZoomAll_Click" Foreground="Green" Background="Orange"/>

        <Button x:Name="btOneSceen" Content="1 Screen" HorizontalAlignment="Left" Margin="1200,223,0,0" VerticalAlignment="Top" Height="39" 
                Width="80" Click="OneSceen_Click" Foreground="Red" Background="White"/>

        <Button x:Name="btAutoZoom" Click="FindFight_Click" Content="AutoZ: Off" HorizontalAlignment="Left" 
                Height="39" Margin="1200,275,0,0" VerticalAlignment="Top" Width="80" FontSize="13" Foreground="Red" Background="BlueViolet"/>

        <!--Show map 3d-->
        <Button x:Name="BtMap3D" Content="3D_Mode" Click="Map3D_Click" FontSize="13" HorizontalAlignment="Left" Height="39" 
                Margin="1200,328,0,0" VerticalAlignment="Top" Width="80" Background="Blue"/>

        <!--UART-->
        <ListBox x:Name="ConnectDevices" HorizontalAlignment="Left" Height="64" Margin="1200,376,0,0" VerticalAlignment="Top" Width="80" RenderTransformOrigin="0.5,0.5"
                  ScrollViewer.HorizontalScrollMode="Enabled" ScrollViewer.HorizontalScrollBarVisibility="Visible" ItemsSource="{Binding Source={StaticResource DeviceListSource}}" Background="Pink">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Id}" />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <Button x:Name="comPortInput" Content="Connect" Click="comPortInput_Click" IsEnabled="False" HorizontalAlignment="Left" Height="39" Margin="1200,450,0,0" VerticalAlignment="Top" Width="80" Background="Blue"/>

        <TextBox x:Name="tb_ZoomLevel" HorizontalAlignment="Left" Margin="1200,500,0,0" FontSize="13" TextWrapping="Wrap" Text="ZoolLevel" VerticalAlignment="Top" Height="52" Width="80" Background="Aqua"/>

        <TextBox x:Name="tbShowDis" Background="Gold" HorizontalAlignment="Left" Margin="1200,560,0,0" FontSize="13" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="50" Width="80" 
                 Foreground="{ThemeResource AppBarToggleButtonCheckedPressedBorderThemeBrush}" />

        <!--Send Data
        <TextBox x:Name="sendText" HorizontalAlignment="Left" Height="47" Margin="1000,513,0,0" TextWrapping="Wrap" Text="" Background="Blue" VerticalAlignment="Top" Width="180"/>
        <Button x:Name="sendTextButton" Content="Write" Click="sendTextButton_Click" HorizontalAlignment="Left" Height="47" Margin="1213,513,0,0" VerticalAlignment="Top" Width="133" Background="Orange"/>
        <TextBox x:Name="status" HorizontalAlignment="Left" IsReadOnly="True" Height="60" Margin="1000,650,0,0" TextWrapping="Wrap" Text="Status" VerticalAlignment="Top" Width="347"
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled" ScrollViewer.VerticalScrollBarVisibility="Auto" BorderBrush="White"/>
        <TextBox x:Name="rcvdText" HorizontalAlignment="Left" Height="81" Margin="1000,565,0,0" TextWrapping="Wrap" Text="Waiting Receive Data" VerticalAlignment="Top" Width="348"/>
-->
        <!--Adjust-->
        <Slider x:Name="sliderAdjSpeed" HorizontalAlignment="Left" Margin="540,53,0,0" VerticalAlignment="Top" Width="265" Minimum="1" ValueChanged="sliderAdjSpeed_ValueChanged" Value="10" Maximum="50"/>
        <Slider x:Name="slider_AdjTime" HorizontalAlignment="Left" Margin="865,62,0,0" VerticalAlignment="Top" Width="410" ValueChanged="adjTime_Click" Minimum="0" Maximum="100"/>
        <TextBlock x:Name="tblock_Adj_Speed" HorizontalAlignment="Left" FontSize="18" Margin="482,61,0,0" Foreground="Red" TextWrapping="Wrap" Text="Speed" VerticalAlignment="Top" Height="30" Width="53"/>
        <TextBlock x:Name="tblock_Adj_Timer" HorizontalAlignment="Left" FontSize="18" Margin="820,69,0,0" Foreground="Red" TextWrapping="Wrap" Text="Time" VerticalAlignment="Top" Height="30" Width="41"/>
        <TextBlock x:Name="tblock_Start_Timer" HorizontalAlignment="Left" FontSize="16" Margin="820,35,0,0" Foreground="Red" Text="012345.6" VerticalAlignment="Top" Height="25" Width="75"/>
        <TextBlock x:Name="tblock_End_Timer" HorizontalAlignment="Left" FontSize="18" Margin="1200,35,0,0" Foreground="Red" Text="012345.6" VerticalAlignment="Top" Height="25" Width="75"/>
        <TextBlock x:Name="tblock_Current_Timer" HorizontalAlignment="Left" FontSize="18" Margin="1011,35,0,0" Foreground="Red" Text="012345.6" VerticalAlignment="Top" Height="25" Width="75"/>


        <!--Play again button, reload-->

        <Image x:Name="ImReload" VerticalAlignment="Top" HorizontalAlignment="Left"  Height="35" Width="35" Margin="736,0,0,0" Tapped="imReloadClick" IsTapEnabled="False" Source="/Assets/reLoad.png" />
        <Image x:Name="imrewind" VerticalAlignment="Top" HorizontalAlignment="Left"  Height="35" Width="35" Margin="559,0,1677,0" Tapped="imrewind_Click" IsTapEnabled="False" Source="/Assets/Rewind-48.png" />
        <Image x:Name="imPlay" VerticalAlignment="Top" HorizontalAlignment="Left"  Height="35"  Width="35" Margin="604,0,0,0" Tapped="play_Click" IsTapEnabled="False"  Source="/Assets/Play_Beautiful.png" />
        <Image x:Name="imFastForword" VerticalAlignment="Top" HorizontalAlignment="Left"  Height="35"  Width="35" Margin="648,0,0,0" Tapped="fastForword_Click"  IsTapEnabled="False" Source="/Assets/Fast Forward-48.png" />
        <Image x:Name="imStop" VerticalAlignment="Top" HorizontalAlignment="Left"  Height="35" Width="35" Margin="692,0,0,0" Tapped="stop_Click"  IsTapEnabled="False" Source="/Assets/StopSquare.png" />
        <!--
        <TextBox x:Name="TestText" HorizontalAlignment="Left" Height="41" Margin="750,300,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
