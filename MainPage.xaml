        <Maps:MapControl x:Name="MapBackground" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,0,-12,0" Height="730" Width="1" AllowDrop="False" IsHitTestVisible="False" Visibility="Visible" ZoomInteractionMode="Disabled" PanInteractionMode="Disabled"/>

